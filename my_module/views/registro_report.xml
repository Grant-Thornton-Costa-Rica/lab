<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="registro_report" model="ir.actions.report">
        <field name="name">Reporte de Registros</field>
        <field name="model">m.registro</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">registro_report_view</field>
        <field name="report_file">registro_report</field>
        <field name="binding_model_id" ref="model_m_registro"/>
        <field name="binding_type">report</field>
    </record>

    <template id="my_module.registro_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-field="doc.name"/>
                        <p>From <span t-field="doc.start_date"/> to <span t-field="doc.end_date"/></p>
                        <h3>Attendees:</h3>
                        <ul>
                            <t t-foreach="doc.attendee_ids" t-as="attendee">
                                <li><span t-field="attendee.name"/></li>
                            </t>
                        </ul>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
