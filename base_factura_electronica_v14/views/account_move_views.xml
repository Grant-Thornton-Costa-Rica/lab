<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_invoice_view_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='264']" position="after">
                <button name="add_debit_note" type="object" string="Agregar Nota Débito"
                attrs="{'invisible': ['|', ('type', 'not in', ['out_invoice','in_invoice']), ('state','=','draft')]}"/>
                <button string="Reprocesar documento" name="resend_document" type="object" attrs="{'invisible':[('invoice_state','not in',['error','invalid','unauthorized'])]}"/>
            </xpath>
            <xpath expr="//sheet/h1" position="after">
                <h2><strong><field name="consecutive" readonly="True"/></strong></h2>
                <h3><field name="numeric_key" readonly="True"/></h3>
            </xpath>
             <field name="partner_id" position="after">
                <field name="exits_third_party_other_charger" invisible="True"/>
                <field name="activity_code_id" domain="[('company_id','=',company_id)]" required="True" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                <field name="document_type_id" required="True"  options="{'no_create': True, 'no_create_edit': True,'no_open': True,}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                <field name="payment_method_id" required="True" options="{'no_create': True, 'no_create_edit': True,'no_open': True,}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
             </field>
             <field name="fiscal_position_id" position="after">
                  <field name="related_document"  options="{'no_create': True, 'no_create_edit': True}" domain="[('id','!=',id),('state','!=','draft')]"  attrs="{'readonly':[('state','not in',['draft'])],
                  'required':[('document_code','in',['02','03'])]}" />
                  <field name="document_code" invisible="True"/>
                  <field name="reference_document_id"  options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly':[('state','not in',['draft'])],
                  'required':[('document_code','in',['02','03'])]}" />
                  <field name="reference_code_id"  options="{'no_create': True, 'no_create_edit': True}"  attrs="{'readonly':[('state','not in',['draft'])],
                  'required':[('document_code','in',['02','03'])]}" />
                  <field name="name" string="Razón" options="{'no_create': True, 'no_create_edit': True}"  attrs="{'readonly':[('state','not in',['draft'])],
                  'required':[('document_code','in',['02','03'])]}" />
             </field>
             <field name="team_id" position="after">
                <field name="invoice_state" readonly="True" attrs="{'invisible':[('state','=','draft')]}"/>
             </field>
             <field name="discount" position="after">
                <field name="discount_note" groups="sale.group_discount_per_so_line" attrs="{'required':[('discount','!=',0.0)]}"/>
             </field>   
             <field name="payment_term_id" position="attributes">
                <attribute name="required">True</attribute>
             </field> 
             <button name="preview_invoice" position="attributes">
                  <attribute name="invisible">True</attribute>
             </button>
             <xpath expr="//page[last()]" position="after">
                <page name="name" string="Comprobantes">
                    <group>
                        <field name="pdf_invoice_fname" invisible="1"/>
                        <field name="pdf_invoice" filename="pdf_invoice_fname" readonly="True"/>
                        <field name="xml_invoice_fname" invisible="1"/>
                        <field name="xml_invoice" filename="xml_invoice_fname" readonly="True"/>
                        <field name="xml_mh_fname" invisible="1"/>
                        <field name="xml_mh" filename="xml_mh_fname" readonly="True"/>
                    </group>
                </page>
             </xpath>
             <field name="name" position="after">
                 <field name="third_party_id" attrs="{'column_invisible': [('parent.exits_third_party_other_charger', '=', False)] }" />
             </field>                
        </field>
    </record>

    <record id="account_invoice_tree_view_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree.view.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="number" position="after">
                <field name="consecutive" />
            </field>
            <field name="state" position="after">
                <field name="invoice_state" />
            </field>
        </field>
    </record>

    <!-- Supplier-->
    <record id="account_invoice_supplier_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
          <xpath expr="//header/button[@name='264']" position="after">
                <button string="Reprocesar documento" name="resend_document" type="object" attrs="{'invisible':[('invoice_state','not in',['error','invalid'])]}"/>
            </xpath>
            <xpath expr="//sheet/div/h1" position="after">
                <h2><strong><field name="consecutive" readonly="True"/></strong></h2>
                <h3><field name="numeric_key" readonly="True"/></h3>
            </xpath>
             <field name="partner_id" position="after">
                <field name="activity_code_id" required="True" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                <field name="document_type_id" required="True"  options="{'no_create': True, 'no_create_edit': True,'no_open': True,}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                <field name="payment_method_id" required="True" options="{'no_create': True, 'no_create_edit': True,'no_open': True,}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                <field name="payment_term_id" attrs="{'readonly':[('state','not in',['draft'])]}"/>
             </field>
             <field name="partner_bank_id" position="after">
                <field name="invoice_state" readonly="True" attrs="{'invisible':[('state','=','draft')]}"/>
             </field>
             <field name="discount" position="after">
                <field name="discount_note" groups="sale.group_discount_per_so_line" attrs="{'required':[('discount','!=',0.0)]}"/>
             </field> 
             <field name="payment_term_id" position="attributes">
                <attribute name="required">True</attribute>
             </field>
             <xpath expr="//page[last()]" position="after">
                <field name="document_code" invisible="1"/>
                <page name="name" string="Comprobantes" attrs="{'invisible':[('document_code','=','99')]}">
                    <group>
                        <field name="pdf_invoice_fname" invisible="1"/>
                        <field name="pdf_invoice" filename="pdf_invoice_fname" readonly="True"/>
                        <field name="xml_invoice_fname" invisible="1"/>
                        <field name="xml_invoice" filename="xml_invoice_fname" readonly="True"/>
                        <field name="xml_mh_fname" invisible="1"/>
                        <field name="xml_mh" filename="xml_mh_fname" readonly="True"/>
                    </group>
                </page>
             </xpath>                        
        </field>
    </record>

    <record id="account_invoice_supplier_view_tree" model="ir.ui.view">
        <field name="name">account.invoice.supplier.view.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="number" position="after">
                <field name="consecutive" />
            </field>
            <field name="state" position="after">
                <field name="invoice_state" />
            </field>
        </field>
    </record>

    <!--Search-->
    <record id="account_invoice_filter_view_search" model="ir.ui.view">
        <field name="name">account_invoice_filter.view.search</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="number" position="after">
                <field name="consecutive" string="Consecutivo" context="{'active_test': False}" filter_domain="[('consecutive','ilike',self)]"/>
                <filter name="filter_doc_type_01" string="Factura electrónica" domain="[('document_type_id.code','=','01')]"/>
                <filter name="filter_doc_type_04" string="Tiquete Electrónico" domain="[('document_type_id.code','=','04')]"/>
                <filter name="filter_doc_type_09" string="Factura electrónica exportación" domain="[('document_type_id.code','=','09')]"/>
                 <group expand="0" string="Group By">
                        <filter name="group_by_doc_type" string="Tipo documento" context="{'group_by':'document_type_id'}"/>
                        <filter name="group_by_doc_state" string="Situación documento" context="{'group_by':'invoice_state'}"/>
                 </group>
            </field>
        </field>
    </record>

    <!-- Debit Note Action-->
    <record id="account.action_invoice_tree1" model="ir.actions.act_window">
      <field name="domain">[('type', '=', 'out_invoice'),('is_debit_note', '=', False)]</field>
    </record>
    
    <record id="debit_note_action" model="ir.actions.act_window">
      <field name="name">Nota Débito</field>
      <field name="res_model">account.move</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('type', '=', 'out_invoice'),('is_debit_note','=',True)]</field>
      <field name="context">{'default_type':'out_invoice','default_is_debit_note':True}</field>
    </record>

    <record model="ir.actions.act_window.view" id="debit_note_tree_view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account.invoice_tree_with_onboarding"/>
        <field name="act_window_id" ref="debit_note_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="debit_note_form_view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account.invoice_form"/>
        <field name="act_window_id" ref="debit_note_action"/>
    </record>

    <!-- remove print invoice option from account invoice-->
    <function model="ir.actions.report" name="unlink_action"
          eval="[ref('account.account_invoices_without_payment')]"/>
    <function model="ir.actions.report" name="unlink_action"
          eval="[ref('account.account_invoices')]"/>

    <!--Server Action-->
       <record model="ir.actions.server" id="action_server_account_invoice">
      <field name="name">Reprocesar documentos</field>
      <field name="model_id" ref="base_factura_electronica_v14.model_account_move"/>
      <field name="binding_model_id" ref="base_factura_electronica_v14.model_account_move"/>
      <field name="binding_view_types">tree</field>
      <field name="state">code</field>
      <field name="code">
        for record in records:
            record.resend_document()
      </field>
    </record>

</odoo>
