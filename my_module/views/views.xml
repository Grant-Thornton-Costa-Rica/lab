<?xml version="1.0" encoding="utf-8"?>
<odoo>



  <!-- Modelo Pais Start -->
  <!-- Vista Tree -->
  <record id="view_tree_pais" model="ir.ui.view">
        <field name="name">view.tree.pais</field>
        <field name="model">m.pais</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre" />
                <field name="codigo_pais" />
                <field name="create_date" />
                <field name="create_uid" />
                <field name="write_date" />
                <field name="write_uid" />
            </tree>    
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_form_pais" model="ir.ui.view">
        <field name="name">view.form.pais</field>
        <field name="model">m.pais</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group string="Detalles del pais" name="group_top">
                        <group name="group_left">
                            <field name="codigo_pais" required="True"/>
                            <field name="nombre" required="True"/>
                        </group>
                        <group name="group_right">
                            <field name="create_date" readonly="True"/>
                            <field name="create_uid" readonly="True"/>
                            <field name="write_date" readonly="True"/>
                            <field name="write_uid" readonly="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_view_pais" model="ir.actions.act_window">
        <field name="name">Mantenimiento Modelo Pais</field>
        <field name="res_model">m.pais</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_pais"
        name="Mantenimiento Pais"
        action="my_module.action_view_pais"
    />
    <!-- Modelo Pais End -->


    <!-- Modelo Registro Start-->
    <!-- Vista Tree -->
    <record id="view_tree" model="ir.ui.view">
        <field name="name">view.tree.registro</field>
        <field name="model">m.registro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre" />
                <field name="fecha_nacimiento" />
                <field name="nacionalidad" />
                <field name="registro_salida" />
                <field name="detalle_salida" />
                <field name="create_date" />
                <field name="create_uid" />
                <field name="write_date" />
                <field name="write_uid" />
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_form_registro" model="ir.ui.view">
        <field name="name">view.form.registro</field>
        <field name="model">m.registro</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group string="Detalles de registro" name="group_top">
                        <group name="group_left">
                            <field name="nombre" required="True"/>
                            <field name="fecha_nacimiento" required="True"/>
                            <field name="nacionalidad" required="True" readonly="True"/>
                            <field name="registro_salida" required="True" readonly="True"/>
                            <field name="detalle_salida" required="True" readonly="True"/>
                        </group>
                        <group name="group_right">
                            <field name="create_date" readonly="True"/>
                            <field name="create_uid" readonly="True"/>
                            <field name="write_date" readonly="True"/>
                            <field name="write_uid" readonly="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_view_registro" model="ir.actions.act_window">
        <field name="name">Registro Salidas</field>
        <field name="res_model">m.registro</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_registro"
        name="Registro Salidas"
        action="my_module.action_view_registro"
    />
    <!-- Modelo Registro End-->



</odoo>
