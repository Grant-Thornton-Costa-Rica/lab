<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="registro_report" model="ir.actions.report">
        <field name="name">Reporte de Registros</field>
        <field name="model">m.registro</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">my_module.registro_report_view</field>
        <field name="report_file">my_module.registro_report_view</field>
        <field name="binding_model_id" ref="model_m_registro"/>
        <field name="binding_type">report</field>
    </record>

    <template id="registro_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <strong>Reporte #:</strong>
                                <span>1</span>
                            </div>
                        </div>
                        <h4>Sección: Detalle Registros</h4>
                        <table id="tbDetalle" class="table table-bordered table-condensed">
                            <tbody>
                                <tr>
                                    <td>
                                        <h6>
                                            <strong>Nombre persona</strong>
                                        </h6>
                                        <span t-field="doc.nombre"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <h6>
                                            <strong>Fecha nacimiento</strong>
                                        </h6>
                                        <span t-field="doc.fecha_nacimiento"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <h6>
                                            <strong>Edad</strong>
                                        </h6>
                                        <span t-field="doc.edad"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <h6>
                                            <strong>Nacionalidad</strong>
                                        </h6>
                                        <span t-field="doc.nacionalidad"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <h6>
                                            <strong>Direccion</strong>
                                        </h6>
                                        <span t-field="doc.direccion"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <h6>
                                            <strong>Detalle de Salida</strong>
                                        </h6>
                                        <span t-field="doc.detalle_salida"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <hr/>
                        <h4>Sección: Detalle Salidas</h4>
                        <table id="tbSalidas" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Pais Visitado</th>
                                    <th>Fecha Salida</th>
                                    <th>Fecha Entrada</th>
                                    <th>Dias Transcurridos</th>
                                    <th>Observaciones</th>
                                    <th>Detalle Salida</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-field="doc.pais_visitado"/>
                                    <td t-field="doc.fecha_salida"/>
                                    <td t-field="doc.fecha_entrada"/>
                                    <td t-field="doc.dias"/>
                                    <td t-field="doc.observaciones"/>
                                    <td t-field="doc.registro_salida"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
